<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/device_list_bg"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_wifi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="77px"
            android:background="@drawable/config_wifi1_icon" />

        <TextView
            android:id="@+id/tv_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="34px"
            android:text="正在发送账号信息…"
            android:textColor="@color/colorWhite"
            android:textSize="24px" />

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="68px"
            android:layout_marginTop="58px"
            android:layout_marginRight="68px"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/config_wifi_icon" />

            <TextView
                android:layout_width="97px"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="WiFi"
                android:textColor="@color/colorFEFEFF"
                android:textSize="26px" />

            <TextView
                android:id="@+id/tv_wifi"
                android:layout_width="0dp"
                android:layout_height="80px"
                android:layout_weight="1"
                android:background="@drawable/shape_common_black"
                android:gravity="center"
                android:drawableRight="@drawable/down_icon"
                android:text="1"
                android:paddingRight="30px"
                android:textColor="@color/colorWhite"
                android:textSize="24px" />

        </com.zhy.autolayout.AutoLinearLayout>

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="68px"
            android:layout_marginTop="58px"
            android:layout_marginRight="68px"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/config_pwd_icon" />

            <TextView
                android:layout_width="97px"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="密码"
                android:textColor="@color/colorFEFEFF"
                android:textSize="26px" />

            <com.zhy.autolayout.AutoRelativeLayout
                android:layout_width="0dp"
                android:layout_height="80px"
                android:layout_weight="1">

                <EditText
                    android:id="@+id/et_pwd"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/shape_common_black"
                    android:gravity="center"
                    android:inputType="textPassword"
                    android:paddingLeft="20px"
                    android:textColor="@color/colorWhite"
                    android:textSize="24px" />

                <ImageView
                    android:id="@+id/img_eye"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="38px"
                    android:src="@drawable/selector_eye" />

                <ImageView
                    android:id="@+id/img_del"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="38px"
                    android:visibility="gone"
                    android:layout_toLeftOf="@+id/img_eye"
                    android:src="@drawable/config_del_icon" />
            </com.zhy.autolayout.AutoRelativeLayout>


        </com.zhy.autolayout.AutoLinearLayout>

        <TextView
            android:id="@+id/tv_config"
            android:layout_width="match_parent"
            android:layout_height="100px"
            android:layout_marginLeft="80px"
            android:layout_marginTop="80px"
            android:layout_marginRight="80px"
            android:background="@drawable/shape_common_btn"
            android:gravity="center"
            android:text="配置"
            android:textColor="@color/colorWhite"
            android:textSize="30px" />
    </com.zhy.autolayout.AutoLinearLayout>
</layout>