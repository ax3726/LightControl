<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#2F67C4"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="44px"
            android:text="请选择联网方式"
            android:textColor="#23ffffff"
            android:textSize="26px" />

        <com.zhy.autolayout.AutoRelativeLayout
            android:id="@+id/rly_smart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="46px"
            android:paddingTop="38px"
            android:paddingRight="38px"
            android:paddingBottom="30px">

            <TextView
                android:id="@+id/tv_smart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SmartLink"
                android:textColor="@color/selector_choose_color"
                android:textSize="24px" />

            <ImageView
                android:id="@+id/img_smart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_alignParentRight="true"
                android:src="@drawable/selector_choose" />

        </com.zhy.autolayout.AutoRelativeLayout>

        <com.zhy.autolayout.AutoRelativeLayout
            android:id="@+id/rly_ap"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="46px"
            android:paddingTop="30px"
            android:paddingRight="38px"
            android:paddingBottom="30px">

            <TextView
                android:id="@+id/tv_ap"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SmartAP"
                android:textColor="@color/selector_choose_color"
                android:textSize="24px" />

            <ImageView
                android:id="@+id/img_ap"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:src="@drawable/selector_choose" />

            <TextView
                android:id="@+id/tv_ap_hint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_ap"
                android:layout_marginTop="18px"
                android:text=""
                android:textColor="@color/selector_choose_color"
                android:textSize="18px" />
        </com.zhy.autolayout.AutoRelativeLayout>


        <TextView
            android:id="@+id/tv_ok"
            android:layout_width="match_parent"
            android:layout_height="69px"
            android:layout_marginLeft="113px"
            android:layout_marginTop="20px"
            android:layout_marginRight="113px"
            android:layout_marginBottom="38px"
            android:background="@drawable/shape_choose_btn"
            android:gravity="center"
            android:text="完成"
            android:textColor="@color/colorWhite"
            android:textSize="20px" />

    </com.zhy.autolayout.AutoLinearLayout>
</layout>