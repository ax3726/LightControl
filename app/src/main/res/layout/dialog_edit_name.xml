<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#2F67C4"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_del"
            android:layout_width="28px"
            android:layout_height="28px"
            android:layout_gravity="right"
            android:layout_marginTop="23px"
            android:layout_marginRight="23px"
            android:src="@drawable/dialog_del_icon" />

        <EditText
            android:id="@+id/et_name"
            android:layout_width="match_parent"
            android:layout_height="82px"
            android:layout_marginLeft="80px"
            android:layout_marginRight="80px"
            android:background="@color/colorWhite"
            android:gravity="center"
            android:hint="请输入设备名称"
            android:textColor="#000000"
            android:textSize="30px" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16px"
            android:layout_marginBottom="16px"
            android:text="建议输入不超过10个中文字符"
            android:textColor="@color/colorWhite"
            android:textSize="20px" />


        <TextView
            android:id="@+id/tv_ok"
            android:layout_width="match_parent"
            android:layout_height="69px"
            android:layout_marginLeft="113px"
            android:layout_marginTop="20px"
            android:layout_marginRight="113px"
            android:layout_marginBottom="38px"
            android:background="@drawable/shape_choose_btn"
            android:gravity="center"
            android:text="完成"
            android:textColor="@color/colorWhite"
            android:textSize="20px" />


    </com.zhy.autolayout.AutoLinearLayout>
</layout>